<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PocketNews" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/notification_bar_dark</item>
        <item name="colorPrimaryVariant">@color/notification_bar_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="BasicTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NewsHeaderTextView" parent="BasicTextView">
        <item name="android:textSize">22sp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="NewsDescriptionTextView" parent="BasicTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="NotesTextView">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>
    <style name="Theme.PocketNews.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.PocketNews.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.PocketNews.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>